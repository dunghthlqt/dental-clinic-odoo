<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Ensure followup record exists for current company -->
        <!-- Create Follow-up first (if not exists) -->
        <record id="followup_default" model="account.followup" forcecreate="1">
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!-- Default Follow-up Levels (create lines first) -->
        <record id="followup_line_reminder" model="followup.line">
            <field name="followup_id" ref="followup_default"/>
            <field name="name">Nhắc nhở nhẹ</field>
            <field name="sequence">1</field>
            <field name="delay">5</field>
        </record>

        <record id="followup_line_warning" model="followup.line">
            <field name="followup_id" ref="followup_default"/>
            <field name="name">Cảnh báo</field>
            <field name="sequence">2</field>
            <field name="delay">15</field>
        </record>

        <record id="followup_line_final" model="followup.line">
            <field name="followup_id" ref="followup_default"/>
            <field name="name">Cảnh báo cuối cùng</field>
            <field name="sequence">3</field>
            <field name="delay">30</field>
        </record>
    </data>
</odoo>

