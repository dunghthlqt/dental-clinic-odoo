<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Category -->
        <record id="module_category_dental_accounting" model="ir.module.category">
            <field name="name">Dental Accounting</field>
            <field name="description">Accounting management for dental clinic</field>
            <field name="sequence">15</field>
        </record>

        <!-- Groups -->
        <record id="group_dental_accountant" model="res.groups">
            <field name="name">Kế toán nha khoa</field>
            <field name="category_id" ref="module_category_dental_accounting"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_dental_account_manager" model="res.groups">
            <field name="name">Quản lý kế toán</field>
            <field name="category_id" ref="module_category_dental_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_dental_accountant')), (4, ref('account.group_account_manager'))]"/>
        </record>
        
        <!-- Note: ir.model records are automatically created by Odoo when Python models are loaded -->
        <!-- Do NOT manually create ir.model records here -->
    </data>
</odoo>

