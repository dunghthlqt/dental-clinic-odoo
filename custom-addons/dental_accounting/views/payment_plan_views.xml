<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Plan Form View -->
    <record id="view_payment_plan_form" model="ir.ui.view">
        <field name="name">dental.payment.plan.form</field>
        <field name="model">dental.payment.plan</field>
        <field name="arch" type="xml">
            <form string="Kế hoạch Thanh toán">
                <header>
                    <button name="action_view_payments" string="Thanh toán" type="object" class="oe_stat_button" icon="fa-money">
                        <field name="payment_count" widget="statinfo" string="Thanh toán"/>
                    </button>
                    <button name="action_view_invoices" string="Hóa đơn" type="object" class="oe_stat_button" icon="fa-file-text-o"/>
                    <field name="is_overdue" widget="boolean_toggle" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="payment_count" widget="statinfo" string="Thanh toán"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="treatment_id" readonly="1"/>
                            <field name="total_amount" readonly="1"/>
                            <field name="upfront_payment" readonly="1"/>
                            <field name="upfront_payment_date" required="1"/>
                        </group>
                        <group>
                            <field name="installment_period" readonly="1"/>
                            <field name="end_date" readonly="1"/>
                            <field name="total_paid" readonly="1"/>
                            <field name="remaining_amount" readonly="1"/>
                            <field name="is_overdue" readonly="1" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thanh toán" name="payments">
                            <field name="payment_ids" readonly="1">
                                <tree>
                                    <field name="date" string="Ngày"/>
                                    <field name="amount" string="Số tiền"/>
                                    <field name="state" string="Trạng thái"/>
                                    <field name="partner_id" string="Khách hàng"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Payment Plan Tree View -->
    <record id="view_payment_plan_tree" model="ir.ui.view">
        <field name="name">dental.payment.plan.tree</field>
        <field name="model">dental.payment.plan</field>
        <field name="arch" type="xml">
            <tree string="Kế hoạch Thanh toán">
                <field name="treatment_id" string="Điều trị"/>
                <field name="total_amount" string="Tổng số tiền"/>
                <field name="total_paid" string="Đã thanh toán"/>
                <field name="remaining_amount" string="Còn lại"/>
                <field name="is_overdue" widget="boolean_toggle" string="Quá hạn"/>
                <field name="upfront_payment_date" string="Ngày đóng trước"/>
                <field name="end_date" string="Ngày kết thúc"/>
            </tree>
        </field>
    </record>

    <!-- Payment Plan Search View -->
    <record id="view_payment_plan_search" model="ir.ui.view">
        <field name="name">dental.payment.plan.search</field>
        <field name="model">dental.payment.plan</field>
        <field name="arch" type="xml">
            <search string="Kế hoạch Thanh toán">
                <field name="treatment_id" string="Điều trị"/>
                <field name="is_overdue" string="Quá hạn"/>
                <filter string="Quá hạn" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <filter string="Chưa quá hạn" name="not_overdue" domain="[('is_overdue', '=', False)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Điều trị" name="group_treatment" context="{'group_by': 'treatment_id'}"/>
                    <filter string="Trạng thái quá hạn" name="group_overdue" context="{'group_by': 'is_overdue'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Payment Plan Action -->
    <record id="action_payment_plan" model="ir.actions.act_window">
        <field name="name">Kế hoạch Thanh toán</field>
        <field name="res_model">dental.payment.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_payment_plan_search"/>
    </record>
</odoo>

