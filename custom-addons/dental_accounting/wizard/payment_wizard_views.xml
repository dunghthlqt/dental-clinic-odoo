<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Wizard Form View -->
    <record id="view_payment_wizard_form" model="ir.ui.view">
        <field name="name">dental.payment.wizard.form</field>
        <field name="model">dental.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Thanh toán">
                <sheet>
                    <group>
                        <group>
                            <field name="treatment_id" readonly="1"/>
                            <field name="min_amount" readonly="1" invisible="min_amount == 0"/>
                            <field name="max_amount" readonly="1"/>
                        </group>
                        <group>
                            <field name="amount" required="1"/>
                            <field name="payment_date" required="1"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert" invisible="min_amount == 0">
                        <strong>Lưu ý:</strong> Bạn cần thanh toán tối thiểu <field name="min_amount" readonly="1"/> VND (phần đóng trước) trước khi có thể thanh toán linh hoạt.
                    </div>
                </sheet>
                <footer>
                    <button string="Xác nhận" name="action_confirm_payment" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

