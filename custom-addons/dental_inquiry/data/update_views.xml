<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Force update views to fix external IDs -->
        <!-- This will update views that have old external IDs in database -->
        
        <!-- Update res.partner view - Force update to fix external IDs -->
        <record id="view_partner_form_dental" model="ir.ui.view" forcecreate="1">
            <field name="name">res.partner.form.dental</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Inquiries" groups="dental_inquiry.group_dental_inquiry_receptionist,dental_inquiry.group_dental_inquiry_dentist">
                        <field name="inquiry_ids">
                            <tree>
                                <field name="name"/>
                                <field name="treatment_interest"/>
                                <field name="stage_id"/>
                                <field name="estimated_treatment_value"/>
                                <field name="user_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        
        <!-- Menu items are defined in inquiry_menus.xml, crm_team_views.xml, and assign_team_wizard_views.xml -->
        <!-- No need to update them here as they are created correctly in their respective files -->
    </data>
</odoo>

