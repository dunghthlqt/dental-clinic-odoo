<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Create Dental Inquiry Team -->
        <record id="crm_team_dental_inquiry" model="crm.team">
            <field name="name">Đội Inquiry Nha khoa</field>
            <field name="sequence">10</field>
            <field name="use_leads" eval="True"/>
            <field name="use_opportunities" eval="False"/>
            <field name="alias_name">dental-inquiry</field>
        </record>
        
        <!-- Assign custom stages to dental team -->
        <record id="crm_team_dental_inquiry_stage_new" model="crm.stage">
            <field name="name">Inquiry mới</field>
            <field name="sequence">1</field>
            <field name="team_id" ref="crm_team_dental_inquiry"/>
            <field name="is_won" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="crm_team_dental_inquiry_stage_consultation_scheduled" model="crm.stage">
            <field name="name">Đã đặt lịch tư vấn</field>
            <field name="sequence">2</field>
            <field name="team_id" ref="crm_team_dental_inquiry"/>
            <field name="is_won" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="crm_team_dental_inquiry_stage_consulted_pending" model="crm.stage">
            <field name="name">Đã tư vấn - Chờ quyết định</field>
            <field name="sequence">3</field>
            <field name="team_id" ref="crm_team_dental_inquiry"/>
            <field name="is_won" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="crm_team_dental_inquiry_stage_won" model="crm.stage">
            <field name="name">Đã chuyển đổi thành bệnh nhân</field>
            <field name="sequence">4</field>
            <field name="team_id" ref="crm_team_dental_inquiry"/>
            <field name="is_won" eval="True"/>
            <field name="fold" eval="True"/>
        </record>
    </data>
</odoo>

