<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record id="view_assign_team_wizard_form" model="ir.ui.view">
            <field name="name">dental.inquiry.assign.team.wizard.form</field>
            <field name="model">dental.inquiry.assign.team.wizard</field>
            <field name="arch" type="xml">
                <form string="Gán Team cho Inquiries">
                    <group>
                        <p>Wizard này sẽ gán tất cả inquiries vào team "Đội Inquiry Nha khoa".</p>
                        <p>Chỉ những inquiries chưa có team hoặc thuộc team khác sẽ được cập nhật.</p>
                    </group>
                    <footer>
                        <button string="Gán Team" name="action_assign_team" type="object" class="btn-primary"/>
                        <button string="Hủy" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard Action -->
        <record id="action_assign_team_wizard" model="ir.actions.act_window">
            <field name="name">Gán Team cho Inquiries</field>
            <field name="res_model">dental.inquiry.assign.team.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Add button to menu -->
        <menuitem id="menu_assign_team" 
                  name="Gán Team cho Inquiries" 
                  parent="menu_dental_inquiries_root" 
                  action="action_assign_team_wizard"
                  sequence="40"
                  groups="group_dental_inquiry_manager"/>
    </data>
</odoo>

