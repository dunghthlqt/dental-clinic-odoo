<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record id="view_assign_team_wizard_form" model="ir.ui.view">
            <field name="name">dental.inquiry.assign.team.wizard.form</field>
            <field name="model">dental.inquiry.assign.team.wizard</field>
            <field name="arch" type="xml">
                <form string="Gán Team cho Inquiries">
                    <group>
                        <p>Wizard này sẽ gán tất cả inquiries vào team "Đội Inquiry Nha khoa".</p>
                        <p>Chỉ những inquiries chưa có team hoặc thuộc team khác sẽ được cập nhật.</p>
                    </group>
                    <footer>
                        <button string="Gán Team" name="action_assign_team" type="object" class="btn-primary"/>
                        <button string="Hủy" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard Action and Menu are now defined in inquiry_menus.xml -->
    </data>
</odoo>
