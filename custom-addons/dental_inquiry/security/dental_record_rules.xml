<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Receptionist: Can see all inquiries -->
        <record id="rule_inquiry_receptionist_all" model="ir.rule">
            <field name="name">Receptionist: All Inquiries</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[('type', '=', 'lead')]</field>
            <field name="groups" eval="[(4, ref('group_dental_inquiry_receptionist'))]"/>
        </record>

        <!-- Dentist: Can see own inquiries and unassigned ones -->
        <record id="rule_inquiry_dentist_own" model="ir.rule">
            <field name="name">Dentist: Own and Unassigned Inquiries</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '=', False), ('type', '=', 'lead')]</field>
            <field name="groups" eval="[(4, ref('group_dental_inquiry_dentist'))]"/>
        </record>

        <!-- Manager: Can see all inquiries (no restriction) -->
        <!-- No record rule needed for manager - they have full access -->
    </data>
</odoo>

