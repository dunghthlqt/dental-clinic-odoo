<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_dental_bonus_tree" model="ir.ui.view">
        <field name="name">dental.bonus.tree</field>
        <field name="model">dental.bonus</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bonus_type"/>
                <field name="amount"/>
                <field name="employee_count"/>
                <field name="date"/>
                <field name="state" widget="badge" decoration-success="state == 'confirmed'" decoration-muted="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_dental_bonus_form" model="ir.ui.view">
        <field name="name">dental.bonus.form</field>
        <field name="model">dental.bonus</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_draft" string="Quay lại nháp" type="object" invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="bonus_type"/>
                            <field name="amount"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="employee_count" readonly="1"/>
                            <field name="employee_ids" widget="many2many_tags" domain="[]"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Nhập mô tả về khoản thưởng..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_dental_bonus_search" model="ir.ui.view">
        <field name="name">dental.bonus.search</field>
        <field name="model">dental.bonus</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="bonus_type"/>
                <field name="employee_ids"/>
                <field name="date"/>
                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Đã xác nhận" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Thưởng cá nhân" name="individual" domain="[('bonus_type', '=', 'individual')]"/>
                <filter string="Thưởng tập thể" name="team" domain="[('bonus_type', '=', 'team')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Loại thưởng" name="group_by_bonus_type" context="{'group_by': 'bonus_type'}"/>
                    <filter string="Trạng thái" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Ngày" name="group_by_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dental_bonus" model="ir.actions.act_window">
        <field name="name">Thưởng</field>
        <field name="res_model">dental.bonus</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo thưởng mới
            </p>
            <p>
                Quản lý các khoản thưởng cho nhân viên: thưởng cá nhân, thưởng tập thể, thưởng lễ, lương tháng 13, v.v.
            </p>
        </field>
    </record>
</odoo>

