<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_dental_salary_tree" model="ir.ui.view">
        <field name="name">dental.salary.tree</field>
        <field name="model">dental.salary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="month"/>
                <field name="base_salary" sum="Tổng lương cơ bản"/>
                <field name="bonus_amount" sum="Tổng thưởng"/>
                <field name="total_salary" sum="Tổng lương"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'posted'" 
                       decoration-info="state == 'approved'"
                       decoration-warning="state == 'submitted'"
                       decoration-muted="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_dental_salary_form" model="ir.ui.view">
        <field name="name">dental.salary.form</field>
        <field name="model">dental.salary</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Gửi để duyệt" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Duyệt" type="object" class="oe_highlight" invisible="state != 'submitted'"/>
                    <button name="action_post" string="Đăng bút toán" type="object" class="oe_highlight" invisible="state != 'approved'"/>
                    <button name="action_reset_to_draft" string="Quay lại nháp" type="object" invisible="state not in ('submitted', 'approved')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,posted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_account_move" type="object" class="oe_stat_button" icon="fa-file-text-o" invisible="not account_move_id">
                            <field name="account_move_id" widget="statinfo" string="Bút toán"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_id" options="{'no_create': True}"/>
                            <field name="month"/>
                        </group>
                        <group>
                            <field name="base_salary" readonly="1"/>
                            <field name="bonus_amount" readonly="1"/>
                            <field name="total_salary" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thưởng">
                            <field name="bonus_ids" 
                                   domain="[('state', '=', 'confirmed')]"
                                   context="{'default_state': 'confirmed'}">
                                <tree>
                                    <field name="name"/>
                                    <field name="bonus_type"/>
                                    <field name="amount"/>
                                    <field name="date"/>
                                    <field name="employee_count"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Workflow" groups="hr.group_hr_manager">
                            <group>
                                <group>
                                    <field name="submitted_by" readonly="1"/>
                                    <field name="submitted_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="approved_by" readonly="1"/>
                                    <field name="approved_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_dental_salary_search" model="ir.ui.view">
        <field name="name">dental.salary.search</field>
        <field name="model">dental.salary</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="month"/>
                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Đã gửi" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Đã duyệt" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Đã đăng" name="posted" domain="[('state', '=', 'posted')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhân viên" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Tháng" name="group_by_month" context="{'group_by': 'month'}"/>
                    <filter string="Trạng thái" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dental_salary" model="ir.actions.act_window">
        <field name="name">Lương</field>
        <field name="res_model">dental.salary</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo lương mới
            </p>
            <p>
                Tính lương cho nhân viên: lương cơ bản từ hợp đồng + các khoản thưởng đã xác nhận.
            </p>
        </field>
    </record>
</odoo>

