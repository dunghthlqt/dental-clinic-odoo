<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Category -->
        <record id="module_category_dental_inventory" model="ir.module.category">
            <field name="name">Dental Inventory</field>
            <field name="description">Inventory management for dental clinic supplies</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groups -->
        <record id="group_dental_inventory_user" model="res.groups">
            <field name="name">Nhân viên kho</field>
            <field name="category_id" ref="module_category_dental_inventory"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="group_dental_inventory_manager" model="res.groups">
            <field name="name">Quản lý kho</field>
            <field name="category_id" ref="module_category_dental_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_dental_inventory_user')), (4, ref('stock.group_stock_manager'))]"/>
        </record>

        <!-- Explicit model records to ensure models are registered before security CSV loads -->
        <record id="model_dental_low_stock_alert" model="ir.model">
            <field name="name">dental.low.stock.alert</field>
            <field name="model">dental.low.stock.alert</field>
        </record>

        <record id="model_dental_supply_usage_report" model="ir.model">
            <field name="name">dental.supply.usage.report</field>
            <field name="model">dental.supply.usage.report</field>
        </record>

        <record id="model_dental_supply_usage_report_line" model="ir.model">
            <field name="name">dental.supply.usage.report.line</field>
            <field name="model">dental.supply.usage.report.line</field>
        </record>
    </data>
</odoo>

