<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend Purchase Order Form View -->
        <record id="view_purchase_order_form_dental" model="ir.ui.view">
            <field name="name">purchase.order.form.dental</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!-- Add smart button for dental supplies -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_dental_supplies" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-medkit"
                            invisible="dental_supply_count == 0">
                        <field name="dental_supply_count" widget="statinfo" string="Vật tư nha khoa"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

